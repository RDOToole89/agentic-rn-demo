{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/api/*": [
        "./src/api/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/theme/*": [
        "./src/theme/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
