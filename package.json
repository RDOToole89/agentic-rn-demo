{
  "name": "agentic-rn-demo",
  "private": true,
  "scripts": {
    "dev": "pnpm -C apps/client start",
    "dev:server": "cd apps/server && uv run uvicorn src.api.main:app --reload",
    "dev:all": "concurrently -n server,client -c blue,green \"pnpm dev:server\" \"pnpm dev\"",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "generate:api": "orval",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.11.0",
    "concurrently": "^9.2.1",
    "orval": "^8.5.0",
    "prettier": "^3.4.0",
    "typescript": "^5.6.0"
  },
  "pnpm": {
    "overrides": {
      "lightningcss": "1.30.1"
    }
  },
  "volta": {
    "node": "22.16.0"
  }
}
